# Use official Python base image (specify linux/amd64 platform for AKS compatibility)
FROM --platform=linux/amd64 python:3.9

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH=/app

# Set working directory
WORKDIR /app

# Install system dependencies (for psycopg2, etc.)
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files and install (from root directory)
COPY requirements.txt .
COPY libs/ ./libs/
COPY models/ ./models/
COPY common/ ./common/

RUN pip install --upgrade pip && \
    pip install -r requirements.txt

# Copy service code
COPY services/user_management/ .

# Use PORT environment variable, default to 80 (matches K8s Service port)
# PORT can be set at runtime via environment variable
ENV PORT=80

# Expose port
EXPOSE 80

# Start command (production recommends --workers 4)
# Use $PORT environment variable at runtime
CMD ["sh", "-c", "uvicorn main:app --host 0.0.0.0 --port ${PORT:-80}"]